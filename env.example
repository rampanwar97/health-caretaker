# Health Monitoring Service Environment Variables

# Web Server Configuration
WEB_PORT=8080                    # Port for web UI and API (default: 8080)
SERVER_PORT=8080                 # Alternative name for web port (default: 8080)

# Metrics Configuration
METRICS_ENABLED=true             # Enable metrics server (default: true)
METRICS_PORT=9091                # Port for metrics server (default: 9091)
METRICS_PATH=/metrics            # Path for metrics endpoint (default: /metrics)

# Debug Configuration
DEBUG=false                      # Enable debug logging (default: false)

# Example usage:
# WEB_PORT=3000 METRICS_PORT=9092 docker compose up
